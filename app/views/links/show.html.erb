<div class="flex justify-between items-center text-xs">
    <%= link_to "← Back to all links", root_path, class: "no-underline text-xs px-3 py-2 border-2 font-semibold text-gray-900 border-black hover:bg-indigo-600 hover:text-white" %>
    <div class="flex items-center gap-4">
        <%= tag.div pluralize(@link.views_count, "view"), class: "font-semibold" %>
        <button class="relative -ml-px inline-flex items-center gap-x-1.5 px-3 py-2 text-sm font-semibold text-gray-900 ring-2 ring-inset ring-black hover:bg-indigo-600 hover:text-white"
            data-controller="clipboard" data-clipboard-text="<%= view_url(@link) %>">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="size-4">
                <path d="M7.5 3.375c0-1.036.84-1.875 1.875-1.875h.375a3.75 3.75 0 0 1 3.75 3.75v1.875C13.5 8.161 14.34 9 15.375 9h1.875A3.75 3.75 0 0 1 21 12.75v3.375C21 17.16 20.16 18 19.125 18h-9.75A1.875 1.875 0 0 1 7.5 16.125V3.375Z" />
                <path d="M15 5.25a5.23 5.23 0 0 0-1.279-3.434 9.768 9.768 0 0 1 6.963 6.963A5.23 5.23 0 0 0 17.25 7.5h-1.875A.375.375 0 0 1 15 7.125V5.25ZM4.875 6H6v10.125A3.375 3.375 0 0 0 9.375 19.5H16.5v1.125c0 1.035-.84 1.875-1.875 1.875h-9.75A1.875 1.875 0 0 1 3 20.625V7.875C3 6.839 3.84 6 4.875 6Z" />
            </svg>
        </button>
        <%= link_to "Edit", edit_link_path(@link), class: "px-2 py-1.5 border-2 border-black no-underline hover:bg-indigo-600 hover:text-white" if @link.editable_by?(current_user) %>
    </div>
</div>

<h1 class="mt-4"><%= @link.title %></h1>
<%= tag.div @link.description %>

<%= link_to view_path(@link), target: :_blank, data: {turbo: false}, class: "text-xs px-2 py-1.5 border-2 border-black no-underline hover:bg-indigo-600 hover:text-white" do %>
    <%= favicon_image_tag @link.domain, class: "inline-block" %>
    <%= truncate @link.url %>
    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-4 inline-block">
        <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 6H5.25A2.25 2.25 0 0 0 3 8.25v10.5A2.25 2.25 0 0 0 5.25 21h10.5A2.25 2.25 0 0 0 18 18.75V10.5m-10.5 6L21 3m0 0h-5.25M21 3v5.25" />
    </svg>
<% end %>

<%= line_chart @link.views.group_by_day(:created_at, range: 2.weeks.ago..Time.now, expand_range: true).count, colors: ["#4f46e5"] %>

<% if @link.views_count > 0 %>
    <div class="pt-4 gap-y-4">
        <h2 class="text-lg font-semibold">All Views</h2>
        <% @link.views.each do |view| %>
            <div class="flex flex-col border-2 border-black p-4 gap-y-2 mb-4">
                <div class="flex flex gap-x-2 justify-between items-center">
                    <%= tag.p "ip address", class: "text-xs font-semibold" %>
                    <%= tag.p view.ip, class: "text-xs font-base" %>
                </div>
                <div class="flex flex gap-x-2 justify-between items-center">
                    <%= tag.p "geolocation", class: "text-xs font-semibold" %>
                    <%= tag.p view.geolocation, class: "text-xs font-base" %>
                </div>
                <div class="flex flex gap-x-2 justify-between items-center">
                    <%= tag.p "timestamp", class: "text-xs font-semibold" %>
                    <%= tag.p view.timestamp, class: "text-xs font-base" %>
                </div>
            </div>
        <% end %>
    </div>
<% end %>
