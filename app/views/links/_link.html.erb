<%= tag.div id: dom_id(link) do %>
    <%= turbo_stream_from link %>

    <div class="flex flex-col border-2 border-black p-4 gap-y-2 mb-4">
        <div class="flex flex-col pb-2">
            <div class="flex justify-between items-center">
                <%= tag.p "title", class: "text-xs font-normal" %>
                <%= link_to pluralize(link.views_count, "view"), link, class: "px-2 py-1 border-2 border-black no-underline text-xs hover:bg-indigo-600 hover:text-white" %>
            </div>
            <div class="flex w-full pt-1">
                <%= tag.p truncate("Very Very Long URL - Very Long Path"), class: "border-2 border-black text-sm p-2 flex-1" %>
                <button class="relative -ml-px inline-flex items-center gap-x-1.5 px-3 py-2 text-sm font-semibold text-gray-900 ring-2 ring-inset ring-black hover:bg-indigo-600 hover:text-white"
                    data-controller="clipboard" data-clipboard-text="Very Very Long URL - Very Long Path">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="size-6">
                        <path d="M7.5 3.375c0-1.036.84-1.875 1.875-1.875h.375a3.75 3.75 0 0 1 3.75 3.75v1.875C13.5 8.161 14.34 9 15.375 9h1.875A3.75 3.75 0 0 1 21 12.75v3.375C21 17.16 20.16 18 19.125 18h-9.75A1.875 1.875 0 0 1 7.5 16.125V3.375Z" />
                        <path d="M15 5.25a5.23 5.23 0 0 0-1.279-3.434 9.768 9.768 0 0 1 6.963 6.963A5.23 5.23 0 0 0 17.25 7.5h-1.875A.375.375 0 0 1 15 7.125V5.25ZM4.875 6H6v10.125A3.375 3.375 0 0 0 9.375 19.5H16.5v1.125c0 1.035-.84 1.875-1.875 1.875h-9.75A1.875 1.875 0 0 1 3 20.625V7.875C3 6.839 3.84 6 4.875 6Z" />
                    </svg>
                </button>
            </div>
        </div>

        <div class="flex flex-col pb-2">
            <%= tag.p "short url", class: "text-xs font-normal" %>
            <div class="flex w-full pt-1">
                <%= tag.p truncate(view_url(link)), class: "border-2 border-black text-sm p-2 flex-1" %>
                <button class="relative -ml-px inline-flex items-center gap-x-1.5 px-3 py-2 text-sm font-semibold text-gray-900 ring-2 ring-inset ring-black hover:bg-indigo-600 hover:text-white"
                    data-controller="clipboard" data-clipboard-text="<%= view_url(link) %>">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="size-6">
                        <path d="M7.5 3.375c0-1.036.84-1.875 1.875-1.875h.375a3.75 3.75 0 0 1 3.75 3.75v1.875C13.5 8.161 14.34 9 15.375 9h1.875A3.75 3.75 0 0 1 21 12.75v3.375C21 17.16 20.16 18 19.125 18h-9.75A1.875 1.875 0 0 1 7.5 16.125V3.375Z" />
                        <path d="M15 5.25a5.23 5.23 0 0 0-1.279-3.434 9.768 9.768 0 0 1 6.963 6.963A5.23 5.23 0 0 0 17.25 7.5h-1.875A.375.375 0 0 1 15 7.125V5.25ZM4.875 6H6v10.125A3.375 3.375 0 0 0 9.375 19.5H16.5v1.125c0 1.035-.84 1.875-1.875 1.875h-9.75A1.875 1.875 0 0 1 3 20.625V7.875C3 6.839 3.84 6 4.875 6Z" />
                    </svg>
                </button>
            </div>
        </div>

        <div class="flex flex-col">
            <%= tag.p "long url", class: "text-xs font-normal" %>
            <div class="flex w-full pt-1">
                <%= tag.p truncate("https://veryverylongurl.com/verylongpath"), class: "border-2 border-black text-sm p-2 flex-1" %>
                <button class="relative -ml-px inline-flex items-center gap-x-1.5 px-3 py-2 text-sm font-semibold text-gray-900 ring-2 ring-inset ring-black hover:bg-indigo-600 hover:text-white"
                    data-controller="clipboard" data-clipboard-text="https://veryverylongurl.com/verylongpath">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="size-6">
                        <path d="M7.5 3.375c0-1.036.84-1.875 1.875-1.875h.375a3.75 3.75 0 0 1 3.75 3.75v1.875C13.5 8.161 14.34 9 15.375 9h1.875A3.75 3.75 0 0 1 21 12.75v3.375C21 17.16 20.16 18 19.125 18h-9.75A1.875 1.875 0 0 1 7.5 16.125V3.375Z" />
                        <path d="M15 5.25a5.23 5.23 0 0 0-1.279-3.434 9.768 9.768 0 0 1 6.963 6.963A5.23 5.23 0 0 0 17.25 7.5h-1.875A.375.375 0 0 1 15 7.125V5.25ZM4.875 6H6v10.125A3.375 3.375 0 0 0 9.375 19.5H16.5v1.125c0 1.035-.84 1.875-1.875 1.875h-9.75A1.875 1.875 0 0 1 3 20.625V7.875C3 6.839 3.84 6 4.875 6Z" />
                    </svg>
                </button>
            </div>
        </div>
        </div>
    </div>
<% end%>